<section
    id="contact"
    class="py-32 bg-white text-black relative overflow-hidden"
>
    <div class="container mx-auto px-6 md:px-12 relative z-10">
        <div class="flex flex-col">
            <p
                class="text-[10px] uppercase tracking-[0.3em] font-bold text-gray-400 mb-12"
            >
                Start a Project
            </p>

            <h2
                class="text-[12vw] font-bold tracking-tighter leading-[0.85] mb-12"
            >
                LET'S BUILD <br /> THE FUTURE.
            </h2>

            <div
                class="flex flex-col md:flex-row gap-12 md:gap-32 mt-12 border-t border-black/10 pt-12"
            >
                <div class="flex flex-col gap-2">
                    <span
                        class="text-[10px] uppercase tracking-widest font-bold text-gray-400"
                        >Contact</span
                    >
                    <a
                        href="mailto:hello@mposoft.com"
                        class="text-2xl font-medium hover:text-[#ea7600] transition-colors"
                        >hello@mposoft.com</a
                    >
                    <a
                        href="tel:+15550000000"
                        class="text-lg text-gray-500 hover:text-black transition-colors"
                        >+1 (555) 000-0000</a
                    >
                </div>

                <address class="flex flex-col gap-2 not-italic">
                    <span
                        class="text-[10px] uppercase tracking-widest font-bold text-gray-400"
                        >Studio</span
                    >
                    <p class="text-xl font-medium leading-relaxed">
                        123 Innovation Dr.<br />
                        San Francisco, CA 94105
                    </p>
                </address>

                <div class="flex flex-col gap-2">
                    <span
                        class="text-[10px] uppercase tracking-widest font-bold text-gray-400"
                        >Social</span
                    >
                    <div class="flex gap-4 text-lg font-medium">
                        <a
                            href="#"
                            class="hover:text-[#ea7600] transition-colors"
                            aria-label="Follow us on Twitter">Twitter</a
                        >
                        <a
                            href="#"
                            class="hover:text-[#ea7600] transition-colors"
                            aria-label="Connect on LinkedIn">LinkedIn</a
                        >
                        <a
                            href="#"
                            class="hover:text-[#ea7600] transition-colors"
                            aria-label="Follow us on Instagram">Instagram</a
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
