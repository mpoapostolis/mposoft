---
const services = [
    {
        id: "01",
        title: "3D Web Experiences",
        desc: "Interactive WebGL environments built with Three.js and R3F.",
        tags: ["React Three Fiber", "Shaders", "Physics"],
    },
    {
        id: "02",
        title: "Blender Asset Pipelines",
        desc: "Optimization and export of high-fidelity Blender models for the web.",
        tags: ["Draco Compression", "GLTF", "Baking"],
    },
    {
        id: "03",
        title: "Product Configurators",
        desc: "Real-time customization tools for automotive and fashion retail.",
        tags: ["eCommerce", "Real-time", "Mobile"],
    },
    {
        id: "04",
        title: "AR / VR Applications",
        desc: "Immersive spatial computing for training and marketing.",
        tags: ["WebXR", "8th Wall", "Vision Pro"],
    },
];
---

<section id="services" class="py-32 bg-[#080808]">
    <div class="container mx-auto px-6 md:px-12">
        <div class="mb-24">
            <h2
                class="text-[10px] font-mono uppercase tracking-[0.3em] text-[#ea7600] mb-4"
            >
                Capabilities
            </h2>
            <p
                class="text-4xl md:text-5xl font-medium text-white leading-tight max-w-2xl"
            >
                Bridging the gap between <br /> cinematic 3D and the web.
            </p>
        </div>

        <div class="border-t border-white/10">
            {
                services.map((item) => (
                    <div class="group border-b border-white/10 py-12 hover:bg-white/5 transition-colors duration-500 cursor-default">
                        <div class="flex flex-col md:flex-row md:items-baseline gap-6 md:gap-12">
                            <span class="text-sm font-mono text-[#ea7600]">
                                {item.id}
                            </span>

                            <div class="flex-1">
                                <h3 class="text-3xl md:text-4xl font-medium text-white mb-4 group-hover:translate-x-2 transition-transform duration-300">
                                    {item.title}
                                </h3>
                                <p class="text-gray-400 max-w-md text-sm leading-relaxed group-hover:text-gray-200">
                                    {item.desc}
                                </p>
                            </div>

                            <div class="hidden md:flex gap-3">
                                {item.tags.map((tag) => (
                                    <span class="px-3 py-1 rounded-full border border-white/10 text-[10px] uppercase tracking-wider text-gray-400">
                                        {tag}
                                    </span>
                                ))}
                            </div>

                            <div class="md:ml-auto opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                <svg
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="white"
                                    stroke-width="1"
                                >
                                    <>
                                        <line x1="5" y1="12" x2="19" y2="12" />
                                        <polyline points="12 5 19 12 12 19" />
                                    </>
                                </svg>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
